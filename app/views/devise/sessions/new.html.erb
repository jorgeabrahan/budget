<%= stylesheet_link_tag "devise", "data-turbo-track": "reload" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <nav class="navbar">
    <div class="container navbar__container">
      <%= link_to home_path do %>
        <span class="material-symbols-outlined">
          arrow_back_ios
        </span>
      <% end %>
      <h2>LOGIN</h2>
      <%= f.submit "Log In" %>
    </div>
  </nav>

  <div class="inputs">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Email" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field--checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
